<?xml version="1.0" encoding="UTF-8"?>
<ehcache updateCheck="false" name="defaultCache">

<!-- 	<diskStore path="../temp/jeesite/ehcache" /> -->
<!-- 	<diskStore path="ehcache.disk.store.dir" /> -->
	<diskStore path="ehcache.disk.store.dir" />

	<!-- 默认缓存配置. -->
	<defaultCache maxEntriesLocalHeap="500" eternal="false" timeToIdleSeconds="300" timeToLiveSeconds="0"
		overflowToDisk="true" maxEntriesLocalDisk="100000" diskExpiryThreadIntervalSeconds="1800"  />
	
	<!-- 系统缓存 -->
	<cache name="sysCache" maxEntriesLocalHeap="100" eternal="true" overflowToDisk="true"/>
	
	<!-- 位置缓存，2小时内，如果没有访问，会写入数据库 -->	
	<cache name="locCache" maxEntriesLocalHeap="5000" eternal="false" timeToIdleSeconds="7200" overflowToDisk="true">
		<cacheEventListenerFactory class="com.vidmt.of.plugin.sub.tel.cache.LocCache$MyCacheEventListenerFactory"/>
	</cache>
	<!-- 足迹缓存，30分钟内，如果没有访问，会写入数据库 -->	
	<cache name="traceCache" maxEntriesLocalHeap="5000" eternal="false" timeToIdleSeconds="1800" overflowToDisk="true">
		<cacheEventListenerFactory class="com.vidmt.of.plugin.sub.tel.cache.TraceCache$MyCacheEventListenerFactory"/>
	</cache>
	
	<!-- 用户缓存,2消小时没有访问，自动清空 -->
	<cache name="userCache" maxEntriesLocalHeap="5000" eternal="false" timeToIdleSeconds="7200" overflowToDisk="true"/>
	
	<!-- 工作流模块缓存 -->
<!-- 	<cache name="actCache" maxEntriesLocalHeap="100" eternal="true" overflowToDisk="true"/> -->
	
	<!-- 内容管理模块缓存
	<cache name="cmsCache" maxEntriesLocalHeap="100" eternal="true" overflowToDisk="true"/> -->
	
	<!-- 系统活动会话缓存 -->
<!--     <cache name="activeSessionsCache" maxEntriesLocalHeap="10000" overflowToDisk="true" -->
<!--            eternal="true" timeToLiveSeconds="0" timeToIdleSeconds="0" -->
<!--            diskPersistent="true" diskExpiryThreadIntervalSeconds="600"/> -->
    
    <!-- 简单页面缓存
    <cache name="SimplePageCachingFilter" maxEntriesLocalHeap="100" eternal="false" overflowToDisk="true"
    	timeToIdleSeconds="120" timeToLiveSeconds="120" memoryStoreEvictionPolicy="LFU"/> -->
    	
</ehcache>